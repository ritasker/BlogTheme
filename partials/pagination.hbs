<!-- start pagination -->
<div class="pagination-wrap">
	<nav class="pagination clearfix" role="navigation">
		{{#if prev}}
		<a class="newer-posts btn btn-default" href="{{page_url prev}}"> <i class="fa fa-long-arrow-left fa-fw"></i> Newer Posts</a>
		{{/if}}
        <span class="page-number">Page {{page}} of {{pages}}</span>
        {{#if next}}
        <a class="older-posts btn btn-default" href="{{page_url next}}">Older Posts <i class="fa fa-long-arrow-right fa-fw"></i></a>
        {{/if}}
    </nav>
</div>
<!-- end pagination -->