{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<!-- start main content area -->
	<section class="main-content">
		<div class="container">
			<div class="row">
				<div class="col-md-10 col-md-offset-1 content-wrap">
					{{#post}}
					<!-- start post -->
					<article class="post">
						{{#if image}}
						<div class="featured-media">
							<img class="gray" src="{{image}}" alt="{{{title}}}">
						</div>
						{{/if}}
						<div class="post-inner-wrap">
							<header class="post-header align-center">
								<h2 class="post-title">{{{title}}}</h2>
								<div class="post-meta">
									<span class="date">{{date format="Do MMM, YYYY"}}</span> &#47;
									{{#author}}
									<span class="author">By <a href="{{url}}">{{name}}</a></span>
									{{/author}}
								</div>
								{{#if featured}}
								<div class="featured">
									Featured
								</div>
								{{/if}}
							</header>
							<div class="post-content">
								{{content}}
							</div>
							<footer class="post-footer clearfix">
								{{#if tags}}
								<div class="pull-left tag-list">
									<i class="fa fa-folder-o"></i>
									{{tags separator=", "}}
								</div>
								{{/if}}
								<div class="pull-right comment">
									<i class="fa fa-comment-o"></i>
									<a href="{{url}}#disqus_thread">0 Comments</a>
								</div>
							</footer>
						</div>
					</article>
					<div class="share-author-wrap">
					
					{{#author}}
					{{> about-author}}
					{{/author}}
					{{> share}}
					</div>
					{{> comment}}
					{{> prev-next}}
					<!-- end post -->
					{{/post}}
				</div>
			</div>
		</div>
	</section>
<!-- end main content area -->